xyz-page-section(color="maroon") 
  .stats
    .icon.bg.present
    .stat
      .large [[getValue(current.paid)]]
      .medium.thin payouts
    .stat
      .large [[getValue(current.pool.value)]]
      .medium.thin [[current.pool.unit]] pool
      
xyz-page-section.hidden(color="green" size="small" class$="[[visibleClass(winner, 'at')]]")
  .center.winner
    iron-icon(icon="icons:account-balance")
    xyz-number-wei(number="[[winner.output]]" max)
    iron-icon(icon="icons:trending-flat")
    iron-icon(icon="icons:perm-identity")
    span [[getValue(winner.receiver, '0x00000...0000000')]]
    iron-icon(icon="icons:history")
    xyz-datetime-elapsed(datetime="[[winner.at]]")
    
xyz-page-section(color="maroon" size="small")
  .contract.right
    xyz-number-wei(number="[[config.min]]" ether)
    span &nbsp;-&nbsp;
    xyz-number-wei(number="[[config.max]]" ether)
    iron-icon(icon="icons:input")
    span [[config.addr]]
